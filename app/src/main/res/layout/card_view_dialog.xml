<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardImage"
    android:layout_width="300dp"
    android:layout_height="150dp"
    android:backgroundTint="@color/red"
    app:cardElevation="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_margin="3dp">

        <TextView
            android:id="@+id/txtSelectImageFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtSelectImageFrom"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageButton
            android:id="@+id/imgOpenCamera"
            android:contentDescription="@string/imgOpemCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:src="@drawable/icon_camera"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toStartOf="@id/imgOpenGallery"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtSelectImageFrom" />

        <ImageButton
            android:id="@+id/imgOpenGallery"
            android:contentDescription="@string/imgOpenGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:src="@drawable/icon_gallery"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgOpenCamera"
            app:layout_constraintTop_toBottomOf="@id/txtSelectImageFrom" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>